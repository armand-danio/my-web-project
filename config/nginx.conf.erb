worker_processes 1;

events {
    worker_connections 1024;
}

http {
    server {
        listen       <%= ENV["PORT"] %>;
        server_name  localhost;

        location / {
            root   <%= ENV["HOME"] %>/www;
            index  index.html index.htm;
        }

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   <%= ENV["HOME"] %>/www;
        }
    }
}
